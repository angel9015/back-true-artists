<!-- More Like this -->
<div class="page-section">
  <div class="container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="text-center sub-header">
          <h2>More Like This</h2>
        </div>
        <div>
          <% cache('v1', similar_articles) do %>
            <div class="image-gallery grid row">
              <% similar_articles.each do |article| %>
                <%= render 'article_image', article: article %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
</div>
