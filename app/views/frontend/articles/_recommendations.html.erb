<div class="container article-featured-list">
  <div class="row">
    <div class="col-sm-12 sub-header">
      <h2>More Like This</h2>
    </div>
    <% similar_articles.each do |article| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class='article-widget'>
          <%= link_to article_path(article) do %>
            <img data-src="<%= url_for(article.image) %>" class="lazyload" />
            <div class='article-widget-title'>
              <h3><%= article.title %></h3>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
