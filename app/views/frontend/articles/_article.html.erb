<div class="container">
  <div class="row article-container">
    <div class="col-sm-4 article-image">
      <%= link_to article_path(article) do %>
        <img data-src="<%= url_for(article.image) %>" class="lazyload" />
      <% end %>
    </div>
    <div class="col-sm-8">
      <div class="article-content">
        <%= link_to article_path(article) do %>
         <h2><%= article.title %></h2>
        <% end %>
        <p><%= article.introduction %></p>
      </div>
    </div>
  </div>
</div>
