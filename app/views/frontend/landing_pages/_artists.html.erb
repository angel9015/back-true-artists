<!-- Artists -->
<% @artists.each do |artist| %>
  <div class="col-lg-3 col-md-6 col-sm-12">
    <% if artist.city_state.present? %>
      <div class="location-section">
        <%= link_to city_state_artists_path(city_state: artist.city_state.slugorize) do %>
          <i><%= image_pack_tag("media/images/geo-alt.svg") %></i>
          <h4><%= artist.city_state %></h4>
        <% end %>
      </div>
    <% end %>
    <div class="listing-widget shadow">
      <%= link_to artist_path(artist) do %>
        <div class="list-image">
          <% if artist.search_profile_image %>
            <%= lazy_image_tag(asset_blob_url(artist.search_profile_image), title: artist.name, alt: artist.name) %>
          <% end %>
        </div>
        <div class="list-content d-flex align-items-center">
          <div class="list-left flex-grow-1">
            <div class="d-flex align-items-center">
              <div class="profile-img">
                <% if artist.avatar.attached? %>
                  <%= lazy_image_tag(asset_blob_url(artist.avatar)) %>
                <% end %>
              </div>
              <div class="profile-info">
                <h5><%= artist.name %></h5>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
