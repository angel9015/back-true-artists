<% set_meta_tags title: "Find Tattoo Ideas by Body Placement",
              description: "Find your next tattoo idea by exploring different placements on your body." %>


<% set_meta_tags(canonical: placements_tattoos_url)  %>

<% set_meta_tags(open_graph: {
   title: "Find Tattoo Ideas by Body Placement",
   type: 'website',
   site_name: 'TrueArtists',
   url: placements_tattoos_url,
   description: "Find your next tattoo idea by exploring different placements on your body.",
 })
%>

<% set_meta_tags twitter: {
   card: 'summary_large_image',
   site: 'TrueArtists',
   title: "Find Tattoo Ideas by Body Placement",
   description: "Find your next tattoo idea by exploring different placements on your body.",
   url: placements_tattoos_url,
 }
%>

<div class="page-section gray-bg">
  <div class="container">
    <div class="row">
        <div class="col-md-12 search-form">
          <div class="sub-header">
            <h1>Tattoo Ideas by Body Placement</h1>
          </div>
        </div>
        <% @placements.each do |placement| %>
          <div class="col-lg-3 col-md-6 col-sm-12">
            <div class="listing-widget shadow">
              <%= link_to placement_tattoos_path(placement.slug) do %>
                <div class="list-image">
                  <% if placement.avatar.attached? %>
                    <%= lazy_image_tag(asset_blob_url(placement.avatar), title: placement.name, alt: placement.name, class: 'large') %>
                  <% end %>
                </div>
                <div class="list-content d-flex align-items-center">
                  <div class="list-left flex-grow-1">
                    <div class="d-flex align-items-center">
                      <div class="profile-info">
                        <h5 itemprop='name'><%= placement.name %></h5>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
        <!-- // -->
      </div>
    </div>
</div>
