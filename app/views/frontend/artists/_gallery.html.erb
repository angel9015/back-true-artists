<div class="image-gallery grid row">
  <% tattoos.each do |tattoo| %>
    <% if tattoo.image.present? %>
      <div class="col-lg-3 col-md-6 grid-item">
        <%= link_to tattoo_path(tattoo), class: 'gallery-item' do %>
          <img data-src="<%= url_for(tattoo.image) %>" class="lazyload" />
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
