<!-- Artists -->
<div class="col-lg-3 col-md-6 col-sm-12 col">
  <% unless artist.city_state.blank? %>
    <div class="location-section">
      <i><%= image_pack_tag("media/images/geo-alt.svg") %></i>
      <p><%= link_to artist.city_state, city_state_artists_path(city_state: artist.city_state&.slugorize || 'unknown') %></p>
    </div>
  <% end %>
  <div class="listing-widget shadow">
    <%= link_to artist_path(artist) do %>
      <div class="list-image">
        <% if artist.search_profile_image %>
          <%= lazy_image_tag(asset_blob_url(artist.search_profile_image)) %>
        <% end %>
      </div>
      <div class="list-content d-flex align-items-center">
        <div class="list-left flex-grow-1">
          <div class="d-flex align-items-center">
            <div class="profile-img">
              <% if artist.avatar.attached? %>
                <%= lazy_image_tag(asset_blob_url(artist.avatar)) %>
              <% end %>
            </div>
            <div class="profile-info">
              <h5><%= artist.name %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
