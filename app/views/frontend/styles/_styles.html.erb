<% @styles.each do |style| %>
  <div class="col-lg-3 col-md-6 col-sm-12">
    <div class="listing-widget shadow">
      <%= link_to style_tattoos_path(style.slug) do %>
        <div class="list-image">
          <% if style.avatar.attached? %>
            <%= lazy_image_tag(asset_blob_url(style.avatar), title: style.name, alt: style.name, class: 'large') %>
          <% end %>
        </div>
        <div class="list-content d-flex align-items-center">
          <div class="list-left flex-grow-1">
            <div class="d-flex align-items-center">
              <div class="profile-info">
                <h5><%= style.name %></h5>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
