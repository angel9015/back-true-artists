<div class="container">
  <div class="row article-container">
    <div class="col-sm-4 article-image">
      <%= link_to convention_path(convention) do %>
        <img data-src="<%= url_for(convention.image) %>" class="lazyload" />
      <% end %>
    </div>
    <div class="col-sm-8">
      <div class="article-content">
        <%= link_to convention_path(convention) do %>
          <h2><%= convention.name %></h2>
        <% end %>
<!--        <p><%#= article.introduction %></p>-->
      </div>
      <div class="article-meta-data">
        <div class="article-created-date"><%= convention.start_date.strftime("%d-%m-%Y") %></div>
        <div class="article-created-date"><%= convention.end_date.strftime("%d-%m-%Y") %></div>
      </div>
    </div>
  </div>
</div>
