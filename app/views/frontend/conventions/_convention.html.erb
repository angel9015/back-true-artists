<!-- Conventions -->
<div class="col-lg-3 col-md-6 col-sm-12 col">
  <div class="location-section">
    <i><%= image_pack_tag("media/images/geo-alt.svg") %></i>
    <p><%= link_to convention.city_state, city_state_conventions_path(convention.city_state) %></p>
  </div>
  <div class="listing-widget shadow">
    <%= link_to convention_path(convention) do %>
      <div class="list-image">
        <%= lazy_image_tag(asset_blob_url(convention.image)) %>
      </div>
      <div class="list-content d-flex align-items-center">
        <div class="list-left flex-grow-1">
          <div class="align-items-center">
            <div class="info">
              <h5><%= convention.name %></h5>
            </div>
            <div class="meta-data">
              <div class="date">Start Date: <span><%= convention.start_date.strftime("%a, %b %d, %Y") %></span></div>
              <div class="date">End Date: <span><%= convention.end_date.strftime("%a, %b %d, %Y") %></span></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
