<!-- About -->
<div class="page-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="about-studio">
          <div class="about-studio-content">
            <h2>About the Tattoo Shop</h2>
            <p><%= @studio.bio %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="studio-address-item d-flex align-items-center flex-wrap">
          <div class="studio-map">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.5739191273847!2d2.168294715545101!3d41.40505870286215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a4a2c3ee7deda9%3A0xad2281b3b9207a75!2sBlack%20Ship%20Tattoo%20Barcelona!5e0!3m2!1sen!2sbd!4v1617740486300!5m2!1sen!2sbd"
              width="100%" height="215" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
          </div>
          <div class="studio-address d-flex align-items-center flex-grow-1 justify-content-between">
            <div class="address-text">
              <h2><%= @studio.name %></h2>
              <% if @studio.phone_number %>
                <p>Phone: <%= @studio.phone_number %></p>
              <% end %>
              <p><%= @studio.full_address %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
