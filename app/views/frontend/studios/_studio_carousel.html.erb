<div class="col-lg-3 col-md-6 col-sm-12 col">
  <div class="location-section">
    <i><%= image_pack_tag("media/images/geo-alt.svg") %></i>
    <p><%= link_to studio.city_state, city_state_studios_path(studio.city_state) %></p>
  </div>
  <div class="listing-widget shadow">
    <%= link_to studio_path(studio) do %>
      <div class="list-image">
        <div class="list-image-carousel">
          <div class="list-img-item">
            <img data-src="<%= url_for(studio.search_profile_image) %>" class="lazyload" />
          </div>
        </div>
      </div>
      <div class="list-content d-flex align-items-center">
        <div class="list-left flex-grow-1">
          <div class="d-flex align-items-center">
            <div class="profile-img">
              <% if studio.avatar.attached? %>
                <img data-src="<%= url_for(studio.avatar) %>" class="lazyload" />
              <% end %>
            </div>
            <div class="profile-info">
              <h5><%= studio.name %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
