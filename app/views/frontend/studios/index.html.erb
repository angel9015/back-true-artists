<% set_meta_tags title: 'Best Tattoo Studios Near You',
              description: 'Find the certified tattoo studios near your city today. Browse from over 1000+ tattoo shops near you.' %>

<!-- Latest Studio -->
<div class="page-section pt-0 gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="sub-header mb-30">
          <h1>Find Best Tattoo Shops Near You!</h1>
        </div>
        <div class="search-studios-form row">
          <div class="col-md-9">
            <%= render 'layouts/search' %>
          </div>
          <div class="col-md-3">
            <div class="filter-section">
              <div class="multi-filter">
                <label>Art Style</label>
                <div class="multi-filter__selected">All Styles</div>
                <div class="multi-filter__select">
                  <div class="multi-filter__header">
                    Filters
                    <a href="#" class="multi-filter__close"></a>
                  </div>
                  <div class="multi-filter__main">
                    <div class="group">
                      <div class="multi-filter__title">Art Style</div>
                      <ul class="multi-filter__filter">
                        <% @styles.each do |style| %>
                          <li class="filter">
                            <label class="filter-checkbox">
                              <%= style.name %>
                              <input type="checkbox" name="styles" value="<%= style.name %>">
                              <span class="checkmark"></span>
                            </label>
                          </li>
                        <% end %>
                      </ul>
                    </div>
                    <div class="multi-filter__actions">
                      <button class="btn btn-secondary multi-filter__clear">Clear</button>
                      <button class="btn btn-primary multi-filter__apply">Apply</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>
  </div>
</div>

<div class="page-section pt-0 gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="latest-studios-lists grid-gap-30 row">
          <%= render @studios %>
        </div>
      </div>

      <div class="col-md-12 text-center">
        <% unless @meta[:last_page] %>
          <div class="see-more-section">
            <button class="btn btn-alternative btn-lg">See More</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
