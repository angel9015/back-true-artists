<% set_meta_tags title: 'Best Tattoo Studios Near You',
              description: 'Find the certified tattoo studios near your city today. Browse from over 1000+ tattoo shops near you.' %>

<!-- Latest Studio -->
<div class="page-section gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12 search-form">
        <%= form_for studios_path, html: { method: :get } do |f| %>
          <div class="sub-header">
            <h1>Find the Best Tattoo Shops Near You</h1>
          </div>
          <div class="search-artists-form row">
            <div class="col-md-9">
              <div class="search-section">
                <%#= hidden_field_tag 'page', @meta[:current_page] %>
                <%#= hidden_field_tag 'per_page', @meta[:limit_value] %>
                <%= text_field_tag "query", params[:query], class: '', placeholder: 'Search Tattoo Shops' %>
                <%#= submit_tag "Search" %>
                <button type="submit" class="search search-box">
                  <i class="ta-icon-search basic-search"></i>
                </button>
              </div>
            </div>
            <div class="col-md-3">
              <%= render 'frontend/studios/filter' %>
            </div>
          </div>
          <div class="selected-filters">
              <%= render 'frontend/studios/selected_filters' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="page-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="latest-studios-lists grid-gap-30 row">
          <%= render @studios %>
        </div>
      </div>

      <div class="col-md-12 text-center">
        <%= paginate @studios %>
      </div>
    </div>
  </div>
</div>
